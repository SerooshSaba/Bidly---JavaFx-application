<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="TOP_CENTER" spacing="25" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.bidly.bidly.BidderController" prefHeight="400.0" prefWidth="600.0">

    <!-- Nav bar -->
    <HBox>
        <Button fx:id="logoutButton" onAction="#logoutClick">Logout</Button>
        <HBox alignment="CENTER" HBox.hgrow="ALWAYS" >
            <ImageView fx:id="logo" />
        </HBox>
    </HBox>

    <!-- Body -->
    <VBox alignment="CENTER" >

        <ScrollPane fx:id="productOverviewContainer" minHeight="400" style="-fx-background-color:Transparent" fitToWidth="true" fitToHeight="true" >
            <VBox VBox.vgrow="ALWAYS" fx:id="productListingContainer" />
        </ScrollPane>

        <VBox fx:id="paymentContainer" visible="false" >
            <Label>Pay</Label>
        </VBox>

        <VBox alignment="CENTER" fx:id="paymentSuccessMessageContainer" style="-fx-background-color:red" visible="false" >
            <ImageView fx:id="SuccessIcon" />
            <Label text="Payment succeeded!" />
            <Button fx:id="continueBiddingButton" text="Continue budding" />
        </VBox>

        <VBox fx:id="paymentFailureMessageContainer" visible="false" />

    </VBox>

</VBox>
